@model List<Exam>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Sınavlar";
}
@section Head {
    <link href="~/libs/data-tables/datatables.min.css" rel="stylesheet" />
}

<div class="container-xxl flex-grow-1 container-p-y">
    <!-- Basic Bootstrap Table -->
    <div class="card">
        <h5 class="card-header">Sınavlar</h5>
        <div class="table-responsive text-nowrap" style="padding: 0 25px 25px 25px">
            <table id="exams">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Kurs Adı</th>
                        <th>Sınav Adı</th>
                        <th>Zaman Sınırı</th>
                        <th>Erişime Açılma Zamanı</th>
                        <th>Erişime Kapanma Zamanı</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @{
                        foreach (var exam in Model)
                        {
                            <tr>
                                <td><strong>@exam.Id</strong></td>
                                <td>@ViewData[exam.Courseid.ToString()]</td>
                                <td>@exam.Name</td>
                                <td>@exam.Timelimit Dakika</td>
                                <td>@exam.Firstaccesstime</td>
                                <td>@exam.Lastaccesstime</td>
                                <td>
                                    @{
                                        if (exam.Lastaccesstime > DateTime.Now && exam.Firstaccesstime < DateTime.Now)
                                        {
                                            <span class="badge bg-label-success me-1">Aktif</span>
                                        }
                                        else if (exam.Lastaccesstime < DateTime.Now)
                                        {
                                            <span class="badge bg-label-danger me-1">Erişime Kapalı</span>
                                        }
                                        else if (exam.Firstaccesstime > DateTime.Now)
                                        {
                                            <span class="badge bg-label-primary me-1">Erişime Açılacak</span>
                                        }
                                    }
                                </td>
                                <td>
                                    <a class="btn btn-primary" href="/Exam/Edit/@exam.Id">
                                        <span class="tf-icons bx bx-edit-alt"></span>&nbsp; Düzenle
                                    </a>
                                    <a class="btn btn-info" href="/Exam/Report/@exam.Id">
                                        <span class="tf-icons bx bx-book-open"></span>&nbsp; Rapor
                                    </a>
                                    <a class="btn btn-danger" href="/Exam/Delete/@exam.Id">
                                        <span class="tf-icons bx bx-trash"></span>&nbsp; Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!--/ Basic Bootstrap Table -->
</div>
@section Scripts {
    <script src="~/libs/data-tables/datatables.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#exams").DataTable({
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.11.5/i18n/tr.json',
                },
            });
        });
    </script>
}